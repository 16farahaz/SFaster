{% extends 'base.html.twig' %}

{% block title %}Hello ProfilController!{% endblock %}

{% block body %}
<style>
    body{
    background: #f7f7ff;
    margin-top:20px;
}
.card {
    position: relative;
    display: flex;
    flex-direction: column;
    min-width: 0;
    word-wrap: break-word;
    background-color: #fff;
    background-clip: border-box;
    border: 0 solid transparent;
    border-radius: .25rem;
    margin-bottom: 1.5rem;
    box-shadow: 0 2px 6px 0 rgb(218 218 253 / 65%), 0 2px 6px 0 rgb(206 206 238 / 54%);
}
.me-2 {
    margin-right: .5rem!important;
}
</style>
<div class="container">
{{ form_start(form) }}
<div class="main-body">


  <!-- Breadcrumb -->
  <nav aria-label="breadcrumb" class="main-breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="{{ path('home') }}">Home</a></li>
    <li class="breadcrumb-item"><a href="javascript:void(0)">User</a></li>
    <li class="breadcrumb-item active" aria-current="page">User Profile</li>
  </ol>
</nav>
    <div class="row">
    
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex flex-column align-items-center text-center">
                        <img src="https://bootdey.com/img/Content/avatar/avatar7.png" alt="Admin" class="rounded-circle p-1 bg-primary" width="110">
                        <div class="mt-3">
                        

                            <h4>{{app.user.Nom}} {{app.user.Prenom}}</h4>
                            <p class="text-secondary mb-1">Service  {{app.user.Service}}</p>
                            <p class="text-muted font-size-sm">SIMO Tunisie</p>
                        </div>
                    </div>
                    <hr class="my-4">
                </br>
                    
                </div>
            </div>
        </div>
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <h6 class="mb-0">First Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            {{form_widget(form.Nom ,{'attr': {'class': 'form-control'}})}}
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Last Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                        {{form_widget(form.Prenom ,{'attr': {'class': 'form-control'}})}}

                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                        {{form_widget(form.email ,{'attr': {'class': 'form-control'}})}}

                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-sm-3">
                            <h6 class="mb-0">Service</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                        {{form_widget(form.Service ,{'attr': {'class': 'form-control'}})}}
                        </div>
                    </div>
                    <div class="row mb-3">
              
                    </div>          
                
                    <div class="row">
                    
                        <div class="col-sm-3"></div>
                        <div class="col-sm-9 text-secondary" style="color:#B22222;">

                        {{form_widget(form.Change,{'attr': {'class': 'form-control'}} )}}
                 

                        </div>
                    </div>
                </div>
            </div>
          
        </div>
    </div>
</div>
{{ form_end(form) }}
</div>

{% endblock %}
